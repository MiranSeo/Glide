<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="?android:listPreferredItemHeightLarge">

    <ImageView
        android:id="@+id/course_image"
        android:layout_width="?android:listPreferredItemHeightLarge"
        android:layout_height="?android:listPreferredItemHeightLarge"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/course_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/course_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAppearance="?android:textAppearanceListItem"/>

    <TextView
        android:id="@+id/course_subtitle"
        android:layout_below="@id/course_title"
        android:layout_toRightOf="@id/course_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="course description"
        android:paddingBottom="8dp"
        android:textAppearance="?android:textAppearanceListItemSmall"/>


</RelativeLayout>